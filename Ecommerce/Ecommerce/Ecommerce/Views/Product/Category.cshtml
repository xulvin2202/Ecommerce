                                <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat</p>
                            </div>

                        </div>*@

                    <div class="refine-search form-group clearfix">
                        <h3 class="title-category">Sản Phẩm</h3>
                       
                    </div>


                    <form class=" row filters-panel" method="get" data-sort-by>
                        <div class="col-sm-6 view-mode" data-reinitView="grid-3">
                            <div class="sidebar-overlay"></div>
                            <a href="javascript:void(0)" class="open-sidebar d-md-block d-lg-none"><i class="fa fa-bars"></i> Sidebar </a>

               
                        </div>
                        <div class="short-by-show col-sm-6 col-xs-12 ">
                            

                        </div>
                    </form>

                    <form action="https://sb-clickboom.mybigcommerce.com/compare" method='POST' data-product-compare>
                        <div class="products-list row" id="my-products" id="my-products">
                            @foreach (var item in Model)
                            {
                                var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                           
                                <div class="product-layout product-grid product-grid-4 col-lg-3 col-md-4 col-12" >
                                    <article class="product-item-container ">
                                        <div class="left-block ">
                                            @if (item.PromotionPrice != null)
                                            {
                                                <div class="sale-flag-discount">
                                                    <span class="sale-text">Sale</span>
                                                </div>
                                            }
                                            else
                                            {

                                            }
