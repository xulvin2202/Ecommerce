                                                    </div>
                                                    <div class="item-img " data-src="../../cdn11.bigcommerce.com/s-5jeysafj8q/images/stencil/400x400/products/93/398/16__18551.15427884584847.jpg?c=2">
                                                        <img class="card-image lazyload" data-sizes="auto" src="https://cdn11.bigcommerce.com/s-5jeysafj8q/stencil/d7a3b3a0-fb9a-0136-bca6-1b3c63b2f4dc/e/7d147310-fb9b-0136-a892-03abfbabe237/img/loading.svg" data-src="https://cdn11.bigcommerce.com/s-5jeysafj8q/images/stencil/60x60/products/93/398/16__18551.1542788458.jpg?c=2" alt="1 L Le Parfait Jar" title="1 L Le Parfait Jar">
                                                    </div>
                                                    <div class="item-img " data-src="../../cdn11.bigcommerce.com/s-5jeysafj8q/images/stencil/400x400/products/93/399/21__42717.15427884584847.jpg?c=2">
                                                        <img class="card-image lazyload" data-sizes="auto" src="https://cdn11.bigcommerce.com/s-5jeysafj8q/stencil/d7a3b3a0-fb9a-0136-bca6-1b3c63b2f4dc/e/7d147310-fb9b-0136-a892-03abfbabe237/img/loading.svg" data-src="https://cdn11.bigcommerce.com/s-5jeysafj8q/images/stencil/60x60/products/93/399/21__42717.1542788458.jpg?c=2" alt="1 L Le Parfait Jar" title="1 L Le Parfait Jar">
                                                    </div>
                                                </div>*@

                                            <a href="@link" class="product-item-photo">
                                                <img class="img-responsive lazyload" data-sizes="auto" src="@item.Image" data-src="@item.Image" alt="" title="">
                                            </a>

                                            <a href="#" class="quickview btn-button d-none d-md-block" data-animation="false" data-product-id="93" title="Quick view"> <i class="fa fa-search"></i></a>



                                        </div>

                                        <div class="right-block" data-card-body="93">
                                            <h4 class="card-title">
                                                <a href="@link">@item.Name</a>

                                            </h4>
                                            <p class="card-text" data-test-info-type="brandName">#</p>


                                            <div class="price-section price-section--withoutTax ">

                                                @if (item.PromotionPrice != null)
                                                {
                                                    <span data-product-price-without-tax class="price price--withoutTax">@String.Format("{0:#,0 VND}", @item.PromotionPrice)  </span>
                                                    <span data-product-non-sale-price-without-tax class="price price--rrp">@String.Format("{0:0,0}", item.Price)</span>
                                                }
                                                else if (item.PromotionPrice == null)
                                                {
                                                    <span data-product-price-without-tax class="price price--withoutTax">@String.Format("{0:#,0 VND}", item.Price)</span>
                                                }

                                            </div>


                                            <div class="ratings ">
                                                <div class="prod-rating" data-test-info-type="productRating">
                                                    <span class="rating--small">
                                                        <span class="icon icon--ratingFull">
                                                            <svg>
                                                                <use xlink:href="#icon-star" />
                                                            </svg>
                                                        </span>
                                                        <span class="icon icon--ratingFull">
                                                            <svg>
                                                                <use xlink:href="#icon-star" />
