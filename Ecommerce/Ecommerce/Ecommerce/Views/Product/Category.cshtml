@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;


@{  
    var category = (Model.EF.Category)ViewBag.Category;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var categoryProduct = (List<Model.EF.Category>)ViewBag.Category;
    var listallbrand = (List<Model.EF.Brand>)ViewBag.ListAllBrand;
    var subcategory = (List<Model.EF.Category>)ViewBag.Subcategory;
    var brand = (List<Model.EF.Brand>)ViewBag.ListBrand;
    var cate = (List<Model.EF.Category>)ViewBag.Cate;
}
}

<div class="container">
    <div class="sb-breadcrumbs breadcrumb-bg ">
        <div class="entry-header" style="background-color:#1f2534">
            <h3 class="entry-title">

                @category.Name
            </h3>
            <ul class="breadcrumb ">
                <li class="breadcrumb-item ">
                    <i class="fa fa-home"></i>
                    <a href="/" class="breadcrumb-label">
                        Trang Chủ
                    </a>
                </li>

                <li class="breadcrumb-item is-active">
                    <a href="/san-pham/@category.MetaTitle-@category.ID" class="breadcrumb-label">
                        @category.Name
                    </a>
                </li>

            </ul>
        </div>
    </div>
</div>

<div id="modal" class="modal" data-reveal data-prevent-quick-search-close>
    <a href="#" class="modal-close" aria-label="Close" role="button">
        <span aria-hidden="true">&#215;</span>
    </a>
    <div class="modal-content"></div>
    <div class="loadingOverlay"></div>
</div>

<div class="main-body clearfix sidebar--left">

    <div class="container">
        <div class="row page">

            <aside class="col-xl-3 col-lg-3 page-sidebar sidebar-offcanvas" id="faceted-search-container">
                <nav>
                    <span id="close-sidebar" class=" fa fa-times"></span>
                    @if (category.ParentID == null)
                    {


                        <!-- BEGIN Side All Categories -->
                        <div class="module  sidebar--categories">
                            <h5 class="block-title"> Danh Mục</h5>
                            <div class="block-content clearfix">
                                <ul class="navList">
                                    @foreach (var item in subcategory)
                                    {
                                        //var link = "/san-pham/" + item.MetaTitle + "-" + item.ID;

                                        <li class="navList-item">
                                            <a class="navList-action has-subMenu is-current" href="/san-pham/@item.MetaTitle-@item.ID" style="color:black"> @item.Name </a>
                                            @*<a class="navList-toggle" data-collapsible="navList-category-23"><i class="icon navList-action-moreIcon" aria-hidden="true"><svg><use xlink:href="#icon-chevron-down" /></svg></i></a>

                                            <ul class="navList-subMenu-list" id="navList-category-23"></ul>*@
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                    }

                    <div class="module  sidebar--categories">
                        <h5 class="block-title"> Thương Hiệu</h5>
                        <div class="block-content clearfix">
                            <ul class="navList">
                                @foreach (var item in brand)
                                {
                                    //var link = "/san-pham/" + item.MetaTitle + "-" + item.ID;

                                    <li class="navList-item">
                                        <a class="navList-action has-subMenu is-current" href="/thuong-hieu/@item.MetaTitle-@item.ID" style="color:black"> @item.Name </a>
                                        <a class="navList-toggle" data-collapsible="navList-category-23"><i class="icon navList-action-moreIcon" aria-hidden="true"><svg><use xlink:href="#icon-chevron-down" /></svg></i></a>

                                        <ul class="navList-subMenu-list" id="navList-category-23"></ul>
                                    </li>
                                }
                            </ul>
                        </div>
               






                </nav>
            </aside>

            <main class="col-xl-9 col-lg-9 page-content" id="product-listing-container">
                <div class="products-category clearfix">
