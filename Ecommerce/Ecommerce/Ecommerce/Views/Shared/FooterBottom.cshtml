@foreach (var item in Model)
{
    var subfooter = Model.Where(x => x.ParentID == item.ID);
    <div class="banners info-1">
        <div class="banner-figure">

            <i class="@item.Icon"></i>
        </div>

        <div class="banner-figcaption">
            <div class="banner-figcaption__body">
                <h5 class="banner-figcaption__title">
                    @item.Name
                </h5>
                @foreach (var subsubfooter in subfooter)
                {
                <p class="banner-figcaption__text">@subsubfooter.Name</p>
                }
                </div>
        </div>
    </div>
}