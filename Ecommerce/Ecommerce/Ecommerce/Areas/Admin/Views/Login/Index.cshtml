<head>
    <meta charset="utf-8" />
    <title>Greeva - Responsive Bootstrap 4 Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->

  
    <!-- App css -->
   

    <link href="~/Assets/Admin/Admin/coderthemes.com/greeva/layouts/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Assets/Admin/Admin/coderthemes.com/greeva/layouts/vertical/assets/css/app.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="authentication-bg authentication-bg-pattern d-flex align-items-center">

    
    <div class="account-pages w-100 mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        @using (@Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <div class="card-body p-4">

                                <div class="text-center mb-4">
                                    Đăng nhập @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                </div>

                                <form action="#" class="pt-2">

                                    <div class="form-group mb-3">
                                        <label for="emailaddress">Tài khoản</label>
                                        <input class="form-control" type="text" id="UserName" name="UserName" required="" placeholder="Nhập tài khoản" autofocus autocomplete="off" style="border-radius:10px">

                                    </div>

                                    <div class="form-group mb-3">
                                        
                                        <label for="password">Mật khẩu</label>
                                        <input class="form-control" type="password" required="" name="Password" id="Password" placeholder="Nhập mật khẩu" style="border-radius:10px" >
                                        <input type="checkbox" onclick="myFunction()">Hiển thị mật khẩu
                                    </div>

                                    <div class="custom-control custom-checkbox mb-3">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                        @*<label class="custom-control-label" for="checkbox-signin">Remember me</label>*@
                                        <span>@Html.CheckBoxFor(model => model.RememberMe, new { @onclick = "myFunction()" })Remember me</span>
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-success btn-block" @*style="background-color:black"*@ type="submit"> Log In </button>
                                    </div>

                                </form>

                                <div class="row mt-3">
                                    <div class="col-12 text-center">
                                        <p class="text-muted mb-0">Don't have an account? <a href="auth-register.html" class="text-dark ml-1"><b>Sign Up</b></a></p>
                                    </div> <!-- end col -->
                                </div>
                                <!-- end row -->

                            </div> <!-- end card-body -->
                        }
                        </div>
                    <!-- end card -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor js -->
    <script>
        function myFunction() {
                            var x = document.getElementById("Password");
                            if (x.type === "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
    </script>
    <script src="~/Assets/Admin/Admin/coderthemes.com/greeva/layouts/vertical/assets/js/vendor.min.js"></script>
    <!-- App js -->

    <script src="~/Assets/Admin/Admin/coderthemes.com/greeva/layouts/vertical/assets/js/app.min.js"></script>
</body>

