@model Model.EF.Menu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{Chỉnh sửa Menu}
@section jsFooter{}
<div class="row">
    <div class="col-12">

        <div class="card-box">
            @using (Html.BeginForm("Edit", "Menu", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)


                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="simpleinput">Text</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" autocomplete="off" autofocus id="Text" name="Text" placeholder="Text">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="simpleinput">Link</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" autocomplete="off" autofocus id="Link" name="Link" placeholder="Link">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="simpleinput">Target</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Target, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-purple waves-effect waves-light" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
</div>