@model Model.EF.QandA

@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


@section header{Thêm mới sản phẩm}
@section jsFooter{}s
@using (Html.BeginForm("Create", "QandA", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       <div class="row">
        <div class="col-12">
            <div class="card-box">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="simpleinput">Question</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Question" name="Question" placeholder="Câu hỏi" autofocus autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="example-email">MetaTitle</label>
                        <div class="col-sm-10">
                            <input type="text" id="MetaTitle" name="MetaTitle" class="form-control" placeholder="Title" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="example-password">Answer</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Answer" name="Answer" placeholder="Trả lời" autocomplete="off">
                        </div>
                    </div>
                </form>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-primary" />
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div> <!-- end card-box -->
        </div><!-- end col -->
    </div>
}