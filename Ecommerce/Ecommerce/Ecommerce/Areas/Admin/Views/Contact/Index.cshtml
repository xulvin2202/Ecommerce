@model IEnumerable<Model.EF.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{Phản hồi của khách hàng}

@section jsFooter{

<script src="~/Scripts/userController.js"></script>
}
<div class="card">
    @*<ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link active show" data-toggle="tab" href="#Users">Danh sách</a></li>

        </ul>*@
    <div class="tab-content mt-0">
        <div class="tab-pane active show" id="Users">
            <div class="table-responsive">
                <div class="body">
                    @using (Html.BeginForm("Index", "Content", FormMethod.Get))
                    {
                        <form id="navbar-search" class="navbar-form search-form">
                            <div class="input-group col-md-6">
                                <input type="text" class="form-control" value="@ViewBag.SearchStringContent" name="searchStringContent" placeholder="Search..." autocomplete="off">
                                <div class="input-group-append">
                                    <button href="javascript:void(0);" class="btn btn-success" title="" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
                <table class="table table-hover table-custom spacing8">
                    <thead>
                        <tr>

                            <th class="w60">Tên</th>
                            <th>Điện thoại</th>
                            <th>Ngày phản hồi</th>

                            <th> Nội dung</th>

                            <th class="w100"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <h6 class="mb-0" autocomplete="off">@item.Name</h6>
                                    <span autocomplete="off">@item.Email</span>
                                </td>
                                <td>@item.Phone</td>
                                <td autocomplete="off">
                                    @item.CreateDate
                                </td>
                                <td>@item.Content</td>
                                <td>
                                    @Ajax.ActionLink("Xoá", "Delete", null, new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn chắc chắn muốn xóa ?",
                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete",
                           }, new { @class = "btn btn-dark btn-rounded waves-effect waves-light width-md",
                               @id = "myActionLinkId" })
                                    <script>$("#myActionLinkId").prepend("<i class='fa fa-trash-o text-danger'></i> ");</script>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
