@model Model.EF.Feedback

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{Chi tiết }
@section jsFooter{}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-12">
                    <div class="card-box">
                        <dl class="dl-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput"> Tên</label>
                                <div class="col-sm-10">
                                    @Model.Name
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput"> Điện thoại</label>
                                <div class="col-sm-10">
                                    @Model.Phone
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput"> Email</label>
                                <div class="col-sm-10">
                                    @Model.Email
                                </div>
                                </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput"> Địa chỉ</label>
                                <div class="col-sm-10">
                                    @Model.Address
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput"> Chi tiết</label>
                                <div class="col-sm-10">

                                    @Html.Raw(Model.Content)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput">Ngày đăng </label>
                                <div class="col-sm-10">

                                    @Model.CreateDate
                                </div>
                            </div>
                        </dl>
                        <p>

                            @Html.ActionLink("Quay lại", "Index")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

