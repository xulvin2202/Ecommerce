@model Model.EF.Slide

@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header { Chỉnh sửa Slide}
@section jsFooter{}

<div class="row">
    <div class="col-12">

        <div class="card-box">

            @using (Html.BeginForm("Edit", "Slide", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <form class="form-horizontal">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Tên</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Tên" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Image, "Ảnh", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "txtImage", @autocomple = "off" }, id = "txtImage" })

                                        <a id="btnSelectImage" href="#">Chọn ảnh</a>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="example-textarea">Link</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" id="Link" name="Link" type="text" autocomplete="off"></input>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Sửa" class="btn btn-purple waves-effect waves-light" />
                                </div>
                            </div>
                            <div>
                                @Html.ActionLink("Quay lại", "Index")
                            </div>
                        </div> <!-- end card-box -->
                    </div><!-- end col -->
                </div>
            }
        </div>
    </div>
</div>