@model Model.EF.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{ Cập nhật tài khoản}
<div class="row">
    <div class="col-12">

        <div class="card-box">
            @using (Html.BeginForm("Edit", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    <div class="col-12">
                        <div class="card-box">
                            <form class="form-horizontal">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Mật khẩu</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Tên</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="Name" name="Name" placeholder="Nhập tên" class="form-control" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="Address" name="Address" placeholder="Nhập địa chỉ" class="form-control" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" id="Email" name="Email" placeholder="Nhập email" class="form-control" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Điện thoại</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="Phone" name="Phone" placeholder="Nhập số điện thoại" class="form-control" autofocus autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Role</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.GroupID, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input type="text" id="GroupID" name="GroupID" class="form-control" required>*@
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label" for="simpleinput">Status</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Status)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Edit" class="btn btn-dark btn-rounded waves-effect waves-light width-md" />
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div>
                            @Html.ActionLink("Quay lại", "Index")
                        </div>


                    </div>
                </div>
            }
        </div>
    </div>
</div>



